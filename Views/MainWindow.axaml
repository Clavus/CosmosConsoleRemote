<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:CosmosConsoleRemote.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="450"
        x:Class="CosmosConsoleRemote.Views.MainWindow"
        Icon="/Assets/cosmosconsole.ico"
        Title="Cosmos Console Remote"
        WindowStartupLocation="CenterScreen">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <DockPanel Margin="10" LastChildFill="True">
        
        <StackPanel Height="30" DockPanel.Dock="Bottom" Orientation="Horizontal" Spacing="10">
            
            <TextBlock Text=">" VerticalAlignment="Center" />
            <TextBox Text="{Binding CommandInput}" 
                     Watermark="Enter command..."/>
            <Button Content="Submit" Command="{Binding SubmitCommand}" />
            
        </StackPanel>
        
        <ScrollViewer HorizontalScrollBarVisibility="Disabled" Margin="0,0,0,10" >
            
            <TextBlock Text="{Binding Output}" 
                       TextWrapping="Wrap" 
                       HorizontalAlignment="Left" 
                       VerticalAlignment="Bottom"/>
            
        </ScrollViewer>

    </DockPanel>
    
</Window>
